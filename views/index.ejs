<body class="text-center">

  <main class="form-signin my-4">
    <form action="/encode" method="post">
      <img class="mb-4" src="images/undraw_link_shortener_mvf6.svg" alt="" width="72" height="57">
      <h1 class="h3 mb-3 fw-normal">Shorten a URL</h1>

      <div class="form-floating">
        <input required type="text" name="longUrl" class="form-control" id="longUrl" placeholder="URL">
      </div>

      <button class="w-100 btn btn-lg btn-primary shorten-button" type="submit">Shorten URL</button>
    </form>

    <form action="/decode" method="post">

      <div class="form-floating">
        <input required type="text" name="short" class="form-control" id="short" placeholder="URL">
      </div>

      <button class="w-100 btn btn-lg btn-primary shorten-button" type="submit">Restore URL</button>
    </form>

    <table class="table table-responsive table-light">
      <tbody id="urls">
        <% for (const url of urls) { %>
        <tr>
          <% if (url.encoded === true)  { %>
              <td>
                <a id="shortUrl" href="<%= url.shortUrl %>"><%= url.shortUrl %></a>
              </td>
          <% } else { %>
            <td><a href="<%= url.longUrl %>"><%= url.longUrl %></a></td>
          <% } %>
        </tr>
        <% } %>
      </tbody>
    </table>
  </main>

</body>

